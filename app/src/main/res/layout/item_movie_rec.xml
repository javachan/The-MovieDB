<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMovieItemRec"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_rec"
            android:layout_width="@dimen/item_movie_rec_width"
            android:layout_height="@dimen/item_movie_rec_height"
            android:layout_margin="@dimen/item_movie_rec_margin"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_movie_rec_text_margin"
            android:text="the default text "
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/item_movie_rec_text_size"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.v7.widget.CardView>